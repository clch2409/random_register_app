<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0">

        <TextView
            android:id="@+id/lblNombreAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textStyle="bold"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/txtNombreAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/lblNombreAlumno"/>

        <TextView
            android:id="@+id/lblApellidoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido:"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@+id/txtNombreAlumno"/>

        <TextView
            android:id="@+id/txtApellidoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:layout_margin="7dp"
            android:layout_below="@+id/txtNombreAlumno"
            android:layout_toEndOf="@+id/lblApellidoAlumno"/>

        <TextView
            android:id="@+id/lblDniAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI:"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/txtNombreAlumno"/>

        <TextView
            android:id="@+id/txtDniAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI:"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/lblDniAlumno"/>

        <TextView
            android:id="@+id/lblSexoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/lblDniAlumno"
            android:layout_toEndOf="@+id/txtApellidoAlumno"/>

        <TextView
            android:id="@+id/txtSexoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo"
            android:layout_margin="7dp"
            android:layout_below="@id/txtDniAlumno"
            android:layout_toEndOf="@+id/lblSexoAlumno"/>

        <TextView
            android:id="@+id/lblEstadoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/txtDniAlumno"/>

        <TextView
            android:id="@+id/txtEstadoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/lblEstadoAlumno"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>